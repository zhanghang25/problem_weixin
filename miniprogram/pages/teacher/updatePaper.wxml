<view style="text-align:center;margin-block: 30rpx;">{{"修改題目页面"}}</view>

<van-cell-group title="班级名称：" >
  <van-field
    model:value="{{name}}"
    placeholder="请输入用户名"
    label="姓名："
    disabled
    left-icon="contact"
  />
</van-cell-group>

<van-cell-group title="班级课程号：" >
  <van-field
    model:value="{{code}}"
    placeholder="请输入用户名"
    label="班级课程号："
    left-icon="contact"
    disabled
  />
</van-cell-group>

<van-cell-group title="题目数量：" >
  <van-field
    model:value="{{count}}"
    placeholder="请输入题目数量"
    label="题目数量："
    left-icon="contact"
    disabled
  />
</van-cell-group>

<van-cell-group title="总分值：" >
  <van-field
    model:value="{{total}}"
    placeholder="请输入总分值"
    label="总分值："
    disabled
    left-icon="contact"
  />
</van-cell-group>

<van-cell-group title="试卷名称：" >
  <van-field
    model:value="{{paperName}}"
    placeholder="请输入试卷名称"
    label="试卷名称："
    left-icon="contact"
  />
</van-cell-group>

<van-cell-group title="答题时间/分钟：" >
  <van-field
    model:value="{{time}}"
    placeholder="请输入答题时间/分钟："
    label="答题时间/分钟：："
    left-icon="contact"
  />
</van-cell-group>
<van-row style="margin: 50rpx;display:block;">
<van-col span="8" offset="8">
  <van-button color="#FFC857">确  定</van-button>
</van-col>
</van-row>
<van-row style="margin: 50rpx;display:block;">
<van-col span="8" offset="8">
  <van-button color="#E5446D">发  布</van-button>
</van-col>
</van-row>
<van-row style="margin: 50rpx;display:block;">
<van-col span="8" offset="8">
  <van-button color="#E9724C">修改题目</van-button>
</van-col>
</van-row>